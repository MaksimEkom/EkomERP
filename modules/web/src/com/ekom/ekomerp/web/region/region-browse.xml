<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.ekom.ekomerp.web.region.RegionBrowse"
        focusComponent="regionsTable"
        lookupComponent="regionsTable"
        messagesPack="com.ekom.ekomerp.web.region">
    <dsContext>
        <datasource id="regionDs"
                    class="com.ekom.ekomerp.entity.Region"
                    view="regionWithCountryview"/>
        <groupDatasource id="regionsDs"
                         class="com.ekom.ekomerp.entity.Region"
                         view="regionWithCountryview">
            <query>
                <![CDATA[select e from ekomerp$Region e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="countriesDs"
                              class="com.ekom.ekomerp.entity.Country"
                              view="_local">
            <query>
                <![CDATA[select e from ekomerp$Country e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="regionsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="regionsTable"
                        datasource="regionsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="regionsTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                    </actions>
                    <columns>
                        <column id="code"/>
                        <column id="name"/>
                        <column id="country"/>
                    </columns>
                    <rows datasource="regionsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="regionsTable.create"/>
                        <button id="editBtn"
                                action="regionsTable.edit"/>
                        <button id="removeBtn"
                                action="regionsTable.remove"/>
                        <button id="excelBtn"
                                action="regionsTable.excel"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="regionDs">
                        <column width="250px">
                            <field id="code"/>
                            <field id="name"/>
                            <field id="country"
                                   optionsDatasource="countriesDs"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
