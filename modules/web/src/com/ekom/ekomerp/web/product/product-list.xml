<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.ekom.ekomerp.web.product.ProductList"
        messagesPack="com.ekom.ekomerp.web.product">
    <dsContext>
        <collectionDatasource id="productsDs"
                              class="com.ekom.ekomerp.entity.Product"
                              view="productWithLaboriousnessAndConsumption">
            <query>
                <![CDATA[select e from ekomerp$Product e
order by e.for_purchase, e.name ]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode closeable="true"
                forceDialog="true"
                height="180"
                modal="true"
                resizable="true"
                width="500"/>
    <layout margin="true">
        <vbox spacing="true">
            <hbox spacing="true">
                <label value="msg://Product"
                       width="100px"/>
                <lookupPickerField id="productLookupPickerField"
                                   optionsDatasource="productsDs"
                                   width="350px"/>
            </hbox>
            <hbox spacing="true">
                <label value="msg://Code"
                       width="100px"/>
                <textField id="codeTextField"
                           editable="false"
                           width="350px"/>
            </hbox>
            <buttonsPanel>
                <button id="buttonOK"
                        caption="msg://OK"
                        invoke="select"/>
                <button id="buttonCANCEL"
                        caption="msg://Cancel"
                        invoke="cancel"/>
            </buttonsPanel>
        </vbox>
    </layout>
</window>
