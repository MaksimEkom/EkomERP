<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.product.ProductBrowse"
        lookupComponent="productsDataGrid"
        messagesPack="com.ekom.ekomerp.web.product">
    <dsContext>
        <groupDatasource id="productsDs"
                         class="com.ekom.ekomerp.entity.Product"
                         view="productWithUnitAndCategory">
            <query>
                <![CDATA[select e from ekomerp$Product e
order by e.for_purchase, e.name]]>
            </query>
        </groupDatasource>
        <groupDatasource id="activeProductsDs"
                         class="com.ekom.ekomerp.entity.Product"
                         view="productWithUnitAndCategory">
            <query>
                <![CDATA[select e from ekomerp$Product e
where e.active = true]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="productsDataGrid"
            spacing="true">
        <filter id="productFilter"
                applyTo="productsDataGrid"
                datasource="activeProductsDs"
                defaultMode="fts"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <dataGrid id="productsDataGrid"
                  datasource="activeProductsDs"
                  width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column id="active"
                        property="active"/>
                <column property="name"/>
                <column property="code"/>
                <column editable="false"
                        property="unit"/>
                <column property="fullName"/>
                <column property="docName"/>
                <column editable="false"
                        property="category"/>
                <column property="description"/>
                <column property="analog"/>
                <column property="notes"/>
            </columns>
            <buttonsPanel id="buttonsPanel">
                <button id="createButton"
                        action="productsDataGrid.create"/>
                <button id="editButton"
                        action="productsDataGrid.edit"/>
                <button id="removeButton"
                        action="productsDataGrid.remove"/>
                <button id="excelButton"
                        action="productsDataGrid.excel"/>
                <button id="activateButton"
                        caption="msg://Activate"
                        invoke="onActivateButtonClick"/>
                <button id="deactivateButton"
                        caption="msg://Deactivate"
                        invoke="onDeactivateButtonClick"/>
                <checkBox id="deacivatedCheckBox"
                          align="MIDDLE_LEFT"
                          caption="msg://Show deactivated"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
