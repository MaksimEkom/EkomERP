<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseAdjustmentCaption"
        class="com.ekom.ekomerp.web.stockmovement.StockMovementAdjustmentBrowse"
        focusComponent="stockMovementsFilteredDataGrid"
        messagesPack="com.ekom.ekomerp.web.stockmovement">
    <dsContext>
        <collectionDatasource id="stockMovementsDs"
                              class="com.ekom.ekomerp.entity.StockMovement"
                              view="stockMovementWithLocation">
            <query>
                <![CDATA[select e from ekomerp$StockMovement e
where e.stockMovementType = 3
order by e.date desc]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="stockMovementsFilteredDs"
                              class="com.ekom.ekomerp.entity.StockMovement"
                              view="stockMovementWithLocation">
            <query>
                <![CDATA[select e from ekomerp$StockMovement e
where e.location.stockman = :session$userLogin
and e.stockMovementType = 3
order by e.date desc]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="stockMovementsFilteredDataGrid"
            spacing="true">
        <filter id="stockMovementsFilter"
                applyTo="stockMovementsFilteredDataGrid"
                datasource="stockMovementsFilteredDs"
                defaultMode="fts"
                useMaxResults="false"/>
        <dataGrid id="stockMovementsFilteredDataGrid"
                  datasource="stockMovementsDs"
                  width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column property="number"/>
                <column property="date"/>
                <column property="stockMovementType"/>
                <column editable="false"
                        property="location"/>
                <column property="notes"/>
            </columns>
            <buttonsPanel>
                <button action="stockMovementsFilteredDataGrid.create"/>
                <button action="stockMovementsFilteredDataGrid.edit"/>
                <button action="stockMovementsFilteredDataGrid.remove"/>
                <button action="stockMovementsFilteredDataGrid.refresh"/>
                <button action="stockMovementsFilteredDataGrid.excel"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
