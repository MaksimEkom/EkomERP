<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.stockmovement.StockMovementBrowse"
        messagesPack="com.ekom.ekomerp.web.stockmovement">
    <dsContext>
        <collectionDatasource id="stockMovementsDs"
                              class="com.ekom.ekomerp.entity.StockMovement"
                              view="stockMovementWithLocation">
            <query>
                <![CDATA[select e from ekomerp$StockMovement e 
where e.stockMovementType <> 3
order by e.date desc]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="stockMovementsFilteredDs"
                              class="com.ekom.ekomerp.entity.StockMovement"
                              view="stockMovementWithLocation">
            <query>
                <![CDATA[select e from ekomerp$StockMovement e
where e.location.stockman.id = :session$userId
and e.stockMovementType <> 3
order by e.date desc]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="stockMovementsFilteredDataGrid"
            spacing="true">
        <filter id="stockMovementsFilteredFilter"
                applyTo="stockMovementsFilteredDataGrid"
                datasource="stockMovementsFilteredDs"
                defaultMode="fts"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <dataGrid id="stockMovementsFilteredDataGrid"
                  datasource="stockMovementsFilteredDs"
                  width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column property="consignment"/>
                <column property="date"/>
                <column property="stockMovementType"/>
                <column editable="false"
                        property="location"/>
                <column property="notes"/>
            </columns>
            <buttonsPanel>
                <button id="createButton"
                        action="stockMovementsFilteredDataGrid.create"/>
                <button id="editButton"
                        action="stockMovementsFilteredDataGrid.edit"/>
                <button id="excelButton"
                        action="stockMovementsFilteredDataGrid.excel"/>
                <button id="refreshButton"
                        action="stockMovementsFilteredDataGrid.refresh"/>
                <button id="removeButton"
                        action="stockMovementsFilteredDataGrid.remove"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
