<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.ekom.ekomerp.web.stockmovementline.StockMovementLineEdit"
        datasource="stockMovementLineDs"
        focusComponent="fieldGroup"
        messagesPack="com.ekom.ekomerp.web.stockmovementline">
    <dsContext>
        <datasource id="stockMovementLineDs"
                    class="com.ekom.ekomerp.entity.StockMovementLine"
                    view="stockMovementLine-edit"/>
        <collectionDatasource id="productsDs"
                              class="com.ekom.ekomerp.entity.Product"
                              view="productWithUnit">
            <query>
                <![CDATA[select e from ekomerp$Product e
order by e.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="inventoriesDs"
                              class="com.ekom.ekomerp.entity.Inventory"
                              view="inventory-view">
            <query>
                <![CDATA[select e from ekomerp$Inventory e
where e.location = :ds$stockMovementLineDs.stockMovement.location.id
and e.product = :ds$stockMovementLineDs.product.id]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="200"
                width="700"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="stockMovementLineDs">
            <column width="500px">
                <field id="product"
                       optionsDatasource="productsDs"/>
                <field id="quantity"/>
            </column>
        </fieldGroup>
        <hbox enable="false"
              spacing="true"
              visible="false">
            <label align="MIDDLE_LEFT"
                   value="msg://Current quantity"/>
            <textField id="quantityTextField"
                       align="MIDDLE_LEFT"
                       enable="false"/>
        </hbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
