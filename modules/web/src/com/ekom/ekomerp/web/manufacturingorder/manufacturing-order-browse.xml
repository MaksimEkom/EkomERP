<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.manufacturingorder.ManufacturingOrderBrowse"
        messagesPack="com.ekom.ekomerp.web.manufacturingorder">
    <dsContext>
        <groupDatasource id="manufacturingOrdersDs"
                         class="com.ekom.ekomerp.entity.ManufacturingOrder"
                         view="manufacturingOrder-view">
            <query>
                <![CDATA[select e from ekomerp$ManufacturingOrder e
order by e.date desc]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="manufacturingOrdersDataGrid"
            spacing="true">
        <filter id="filter"
                applyTo="manufacturingOrdersDataGrid"
                datasource="manufacturingOrdersDs"
                defaultMode="fts"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <dataGrid id="manufacturingOrdersDataGrid"
                  datasource="manufacturingOrdersDs"
                  width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column property="number"/>
                <column property="date"/>
                <column editable="false"
                        property="customer"/>
                <column property="dateOfManufacture"/>
                <column property="notes"/>
                <column property="state"/>
            </columns>
            <buttonsPanel>
                <button id="createButton"
                        action="manufacturingOrdersDataGrid.create"/>
                <button id="editButton"
                        action="manufacturingOrdersDataGrid.edit"/>
                <button id="removeButton"
                        action="manufacturingOrdersDataGrid.remove"/>
                <button id="excelButton"
                        action="manufacturingOrdersDataGrid.excel"/>
                <button id="refreshButton"
                        action="manufacturingOrdersDataGrid.refresh"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
