<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.ekom.ekomerp.web.purchaseorder.PurchaseOrderEdit"
        datasource="purchaseOrderDs"
        messagesPack="com.ekom.ekomerp.web.purchaseorder">
    <dsContext>
        <datasource id="purchaseOrderDs"
                    class="com.ekom.ekomerp.entity.PurchaseOrder"
                    view="purchaseOrder-view">
            <collectionDatasource id="purchaseOrderLineDs"
                                  property="purchaseOrderLine"/>
        </datasource>
        <collectionDatasource id="vendorsDs"
                              class="com.ekom.ekomerp.entity.Partner"
                              view="partnerWithParentView">
            <query>
                <![CDATA[select e from ekomerp$Partner e
where e.vendor = true
order by e.name asc]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="productsDs"
                              class="com.ekom.ekomerp.entity.Product"
                              view="productWithUnit">
            <query>
                <![CDATA[select e from ekomerp$Product e
where e.for_purchase = true
order by e.name asc
]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="paymentConditionsDs"
                              class="com.ekom.ekomerp.entity.PaymentCondition">
            <query>
                <![CDATA[select e from ekomerp$PaymentCondition e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions">
        <hbox align="TOP_RIGHT"
              spacing="true"
              width="100%">
            <vbox spacing="true">
                <label id="purchaseOrderLabel"
                       stylename="h2 bold"
                       value="msg://Draft"/>
                <label datasource="purchaseOrderDs"
                       property="number"
                       stylename="h1"/>
            </vbox>
            <vbox spacing="true">
                <button id="confirmButton"
                        align="MIDDLE_RIGHT"
                        caption="msg://Confirm"
                        invoke="onConfirmButtonClick"
                        width="200px"/>
                <button id="discardButton"
                        align="TOP_RIGHT"
                        caption="msg://Discard"
                        invoke="onDiscardButtonClick"
                        width="200px"/>
            </vbox>
        </hbox>
        <hbox margin="true"
              spacing="true"
              width="100%">
            <lookupPickerField id="vendorField"
                               caption="msg://Vendor"
                               datasource="purchaseOrderDs"
                               optionsDatasource="vendorsDs"
                               property="vendor"
                               width="400px"/>
            <dateField id="purchaseOrderDateField"
                       caption="msg://Order date"
                       datasource="purchaseOrderDs"
                       property="date"
                       width="200px"/>
        </hbox>
        <tabSheet id="tabSheet"
                  height="400px">
            <tab id="tab"
                 caption="msg://Products"
                 expand="purchaseOrderLineTable"
                 spacing="true">
                <table id="purchaseOrderLineTable"
                       columnControlVisible="false"
                       editable="true"
                       height="400px"
                       reorderingAllowed="false"
                       settingsEnabled="false"
                       stylename="borderless"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"
                                enable="false"
                                visible="false"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="product"
                                editable="true"/>
                        <column id="product.unit"/>
                        <column id="quantity"
                                align="RIGHT"
                                editable="true"
                                stylename="borderless"/>
                        <column id="price"
                                align="RIGHT"
                                editable="true"/>
                        <column id="subtotal"
                                align="RIGHT"/>
                        <column id="tax"
                                align="RIGHT"/>
                        <column id="total"
                                align="RIGHT"/>
                    </columns>
                    <rows datasource="purchaseOrderLineDs"/>
                    <buttonsPanel>
                        <button id="createButton"
                                caption="msg://Create"
                                invoke="onCreateButtonClick"/>
                        <button id="editButton"
                                action="purchaseOrderLineTable.edit"/>
                        <button id="removeButton"
                                action="purchaseOrderLineTable.remove"/>
                    </buttonsPanel>
                </table>
                <grid spacing="true"
                      width="100%">
                    <columns count="2"/>
                    <rows>
                        <row>
                            <textArea id="notesTextArea"
                                      datasource="purchaseOrderDs"
                                      inputPrompt="msg://Notes"
                                      property="notes"
                                      width="100%"/>
                            <vbox spacing="true">
                                <hbox align="MIDDLE_RIGHT"
                                      spacing="true">
                                    <label align="MIDDLE_RIGHT"
                                           value="msg://Amount Untaxed"/>
                                    <textField id="amountUntaxedField"
                                               align="MIDDLE_RIGHT"
                                               datasource="purchaseOrderDs"
                                               datatype="double"
                                               property="amountUntaxed"
                                               stylename="borderless"
                                               width="150px"/>
                                </hbox>
                                <hbox align="MIDDLE_RIGHT"
                                      spacing="true">
                                    <label align="MIDDLE_RIGHT"
                                           value="msg://Tax"/>
                                    <textField id="amountTaxField"
                                               align="MIDDLE_RIGHT"
                                               datasource="purchaseOrderDs"
                                               property="amountTax"
                                               stylename="borderless"
                                               width="150px"/>
                                </hbox>
                                <groupBox id="groupBox"
                                          align="BOTTOM_RIGHT"
                                          spacing="true"
                                          stylename="light"
                                          width="300px">
                                    <hbox align="MIDDLE_RIGHT"
                                          spacing="true">
                                        <label align="MIDDLE_RIGHT"
                                               stylename="h2 bold"
                                               value="msg://Amount"/>
                                        <textField id="amountTotalField"
                                                   align="MIDDLE_RIGHT"
                                                   datasource="purchaseOrderDs"
                                                   property="amountWithTax"
                                                   stylename="borderless bold"
                                                   width="140px"/>
                                    </hbox>
                                </groupBox>
                            </vbox>
                        </row>
                    </rows>
                </grid>
            </tab>
            <tab id="deliveryAndPaymentTab"
                 caption="msg://Delivery and Payment"
                 margin="true"
                 spacing="true">
                <grid id="grid"
                      spacing="true"
                      width="100%">
                    <columns count="2"/>
                    <rows>
                        <row>
                            <vbox spacing="true">
                                <hbox height="100%"
                                      spacing="true">
                                    <label align="MIDDLE_LEFT"
                                           value="msg://Delivery date"/>
                                    <dateField id="deliveryDateField"
                                               datasource="purchaseOrderDs"
                                               height="33px"
                                               property="date"
                                               width="150px"/>
                                </hbox>
                            </vbox>
                            <vbox spacing="true">
                                <hbox height="100%"
                                      spacing="true"
                                      width="100%">
                                    <label value="msg://Payment condition"/>
                                    <lookupPickerField id="paymentConditionPickerField"
                                                       datasource="purchaseOrderDs"
                                                       optionsDatasource="paymentConditionsDs"
                                                       property="paymentCondition"/>
                                </hbox>
                            </vbox>
                        </row>
                        <row>
                            <hbox spacing="true">
                                <label align="MIDDLE_LEFT"
                                       value="msg://Invoice file"/>
                                <upload id="invoiceUpload"
                                        clearButtonIcon="icons/clear.png"
                                        datasource="purchaseOrderDs"
                                        property="invoiceFile"
                                        showClearButton="true"
                                        showFileName="true"
                                        uploadButtonIcon="icons/upload.png"/>
                            </hbox>
                        </row>
                    </rows>
                </grid>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               align="BOTTOM_LEFT"
               screen="extendedEditWindowActions"/>
    </layout>
</window>
