<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.purchaseorder.PurchaseOrderBrowse"
        messagesPack="com.ekom.ekomerp.web.purchaseorder">
    <dsContext>
        <groupDatasource id="purchaseOrdersDs"
                         class="com.ekom.ekomerp.entity.PurchaseOrder"
                         view="_local">
            <query>
                <![CDATA[select e from ekomerp$PurchaseOrder e
order by e.number desc]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="purchaseOrdersDataGrid"
            spacing="true">
        <filter id="filter"
                applyTo="purchaseOrdersDataGrid"
                datasource="purchaseOrdersDs"
                defaultMode="fts"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <dataGrid id="purchaseOrdersDataGrid"
                  datasource="purchaseOrdersDs"
                  width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column property="number"/>
                <column property="state"/>
                <column property="notes"/>
                <column property="amountUntaxed"/>
                <column property="amountTax"/>
                <column property="amountWithTax"/>
                <column property="date"/>
                <column property="deliveryDate"/>
            </columns>
            <buttonsPanel>
                <button id="createButton"
                        action="purchaseOrdersDataGrid.create"/>
                <button id="editButton"
                        action="purchaseOrdersDataGrid.edit"/>
                <button id="removeButton"
                        action="purchaseOrdersDataGrid.remove"/>
                <button id="excelButton"
                        action="purchaseOrdersDataGrid.excel"/>
                <button id="refreshButton"
                        action="purchaseOrdersDataGrid.refresh"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
