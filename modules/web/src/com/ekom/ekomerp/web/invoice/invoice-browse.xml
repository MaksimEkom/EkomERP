<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.invoice.InvoiceBrowse"
        messagesPack="com.ekom.ekomerp.web.invoice">
    <dsContext>
        <groupDatasource id="invoicesDs"
                         class="com.ekom.ekomerp.entity.Invoice"
                         view="invoice-view">
            <query>
                <![CDATA[select e from ekomerp$Invoice e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="invoicesDataGrid"
            spacing="true">
        <filter id="filter"
                applyTo="invoicesDataGrid"
                datasource="invoicesDs"
                defaultMode="fts"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <dataGrid id="invoicesDataGrid"
                  datasource="invoicesDs"
                  width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column property="number"/>
                <column property="date"/>
                <column property="dueDate"/>
                <column editable="false"
                        property="partner"/>
                <column property="state"/>
                <column property="type"/>
                <column property="origin"/>
                <column property="amountUntaxed"/>
                <column property="amountTax"/>
                <column property="amountTotal"/>
                <column property="notes"/>
                <column editable="false"
                        property="paid"/>
                <column editable="false"
                        property="debt"/>
            </columns>
            <buttonsPanel>
                <button id="createButton"
                        action="invoicesDataGrid.create"/>
                <button id="editButton"
                        action="invoicesDataGrid.edit"/>
                <button id="removeButton"
                        action="invoicesDataGrid.remove"/>
                <button id="excelButton"
                        action="invoicesDataGrid.excel"/>
                <button id="refreshButton"
                        action="invoicesDataGrid.refresh"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
