<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.ekom.ekomerp.web.invoice.InvoiceEdit"
        datasource="invoiceDs"
        messagesPack="com.ekom.ekomerp.web.invoice">
    <dsContext>
        <datasource id="invoiceDs"
                    class="com.ekom.ekomerp.entity.Invoice"
                    view="invoice-view">
            <collectionDatasource id="invoiceLineDs"
                                  property="invoiceLine"/>
            <collectionDatasource id="paymentsDs"
                                  property="payments"/>
        </datasource>
        <collectionDatasource id="partnersDs"
                              class="com.ekom.ekomerp.entity.Partner"
                              view="_local">
            <query>
                <![CDATA[select e from ekomerp$Partner e
order by e.name asc]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="productsDs"
                              class="com.ekom.ekomerp.entity.Product"
                              view="productWithUnit">
            <query>
                <![CDATA[select e from ekomerp$Product e
order by e.name]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions">
        <hbox spacing="true"
              width="100%">
            <vbox spacing="true">
                <label id="invoiceLabel"
                       stylename="h2 bold"
                       value="msg://Invoice"/>
                <label id="invoiceNumberLabel"
                       datasource="invoiceDs"
                       property="number"
                       stylename="h1"/>
            </vbox>
            <vbox spacing="true">
                <button id="approveButton"
                        align="TOP_RIGHT"
                        caption="msg://Approve invoice"
                        invoke="onApproveButtonClick"
                        width="200px"/>
                <button id="discardButton"
                        align="TOP_RIGHT"
                        caption="msg://Discard invoice"
                        invoke="onDiscardButtonClick"
                        width="200px"/>
            </vbox>
        </hbox>
        <hbox margin="true"
              spacing="true"
              width="100%">
            <vbox spacing="true">
                <lookupPickerField id="partnerPickerField"
                                   caption="msg://Partner"
                                   datasource="invoiceDs"
                                   optionsDatasource="partnersDs"
                                   property="partner"
                                   width="300px"/>
                <textField id="originField"
                           caption="msg://Origin"
                           datasource="invoiceDs"
                           property="origin"
                           width="300px"/>
            </vbox>
            <vbox spacing="true">
                <dateField id="invoiceDateField"
                           caption="msg://Date"
                           datasource="invoiceDs"
                           property="date"
                           width="200px"/>
                <dateField id="dueDateField"
                           caption="msg://Due date"
                           datasource="invoiceDs"
                           property="dueDate"
                           width="200px"/>
            </vbox>
        </hbox>
        <tabSheet height="400px">
            <tab id="invoiceLineTab"
                 caption="msg://Invoice"
                 expand="invoiceLineTable"
                 spacing="true">
                <table id="invoiceLineTable"
                       editable="true"
                       height="300px"
                       stylename="borderless"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"
                                enable="false"
                                visible="false"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="product"
                                editable="true"/>
                        <column id="product.unit"/>
                        <column id="quantity"
                                editable="true"/>
                        <column id="price"
                                editable="true"/>
                        <column id="subtotal"/>
                        <column id="tax"/>
                        <column id="total"/>
                    </columns>
                    <rows datasource="invoiceLineDs"/>
                    <buttonsPanel>
                        <button id="createButton"
                                caption="msg://Create"
                                invoke="onCreateButtonClick"/>
                        <button action="invoiceLineTable.edit"/>
                        <button action="invoiceLineTable.remove"/>
                    </buttonsPanel>
                </table>
                <grid spacing="true"
                      width="100%">
                    <columns count="2"/>
                    <rows>
                        <row>
                            <textArea id="notesTextArea"
                                      datasource="invoiceDs"
                                      inputPrompt="msg://Notes"
                                      property="notes"
                                      width="100%"/>
                            <vbox spacing="true">
                                <hbox align="MIDDLE_RIGHT"
                                      spacing="true">
                                    <label align="MIDDLE_RIGHT"
                                           value="msg://Amount Untaxed"/>
                                    <label align="MIDDLE_RIGHT"
                                           datasource="invoiceDs"
                                           property="amountUntaxed"
                                           width="150px"/>
                                </hbox>
                                <hbox align="MIDDLE_RIGHT"
                                      spacing="true">
                                    <label align="MIDDLE_RIGHT"
                                           value="msg://Tax"/>
                                    <label align="MIDDLE_RIGHT"
                                           datasource="invoiceDs"
                                           property="amountTax"
                                           width="150px"/>
                                </hbox>
                                <groupBox align="MIDDLE_RIGHT"
                                          spacing="true"
                                          stylename="light"
                                          width="300px">
                                    <hbox align="MIDDLE_RIGHT"
                                          spacing="true">
                                        <label align="MIDDLE_RIGHT"
                                               stylename="h2 bold"
                                               value="msg://AmountTotal"/>
                                        <label align="MIDDLE_RIGHT"
                                               datasource="invoiceDs"
                                               property="amountTotal"
                                               width="150px"/>
                                    </hbox>
                                </groupBox>
                                <hbox id="paidHBox"
                                      align="MIDDLE_RIGHT"
                                      height="18px"
                                      spacing="true">
                                    <label align="MIDDLE_RIGHT"
                                           value="msg://Paid"/>
                                    <label align="MIDDLE_RIGHT"
                                           datasource="invoiceDs"
                                           property="paid"
                                           width="150px"/>
                                </hbox>
                                <groupBox id="debtGroupBox"
                                          align="MIDDLE_RIGHT"
                                          spacing="true"
                                          stylename="light"
                                          width="300px">
                                    <hbox align="MIDDLE_RIGHT"
                                          spacing="true">
                                        <label align="MIDDLE_RIGHT"
                                               stylename="h2 bold"
                                               value="msg://Debt"/>
                                        <label align="MIDDLE_RIGHT"
                                               datasource="invoiceDs"
                                               property="debt"
                                               width="150px"/>
                                    </hbox>
                                </groupBox>
                            </vbox>
                        </row>
                    </rows>
                </grid>
            </tab>
            <tab id="fileTab"
                 caption="msg://FileTab"
                 margin="true,false,false,false"
                 spacing="true">
                <upload id="invoiceUpload"
                        clearButtonIcon="icons/clear.png"
                        datasource="invoiceDs"
                        property="invoiceFile"
                        showClearButton="true"
                        showFileName="true"
                        uploadButtonIcon="icons/upload.png"/>
            </tab>
            <tab id="Payments"
                 caption="msg://Payments"
                 margin="true,false,false,false"
                 spacing="true">
                <table id="paymentsTable"
                       height="100%"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="number"/>
                        <column id="date"/>
                        <column id="paymentMethod"/>
                        <column id="notes"/>
                        <column id="amount"/>
                    </columns>
                    <rows datasource="paymentsDs"/>
                    <buttonsPanel id="buttonsPanel">
                        <button id="paymentsCreateButton"
                                action="paymentsTable.create"
                                caption="msg://Create"/>
                        <button id="paymnetsEditButton"
                                action="paymentsTable.edit"/>
                        <button id="paymnetsRemoveButton"
                                action="paymentsTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               align="BOTTOM_LEFT"
               screen="extendedEditWindowActions"/>
    </layout>
</window>
