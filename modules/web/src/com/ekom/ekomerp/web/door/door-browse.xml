<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.door.DoorBrowse"
        focusComponent="doorsTable"
        lookupComponent="doorsTable"
        messagesPack="com.ekom.ekomerp.web.door">
    <dsContext>
        <groupDatasource id="doorsDs"
                         class="com.ekom.ekomerp.entity.Door"
                         view="_local">
            <query>
                <![CDATA[select e from ekomerp$Door e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="doorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="doorsTable"
                datasource="doorsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="doorsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="doorKind"/>
                <column id="cd"/>
                <column id="designation"/>
                <column id="description"/>
            </columns>
            <rows datasource="doorsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="doorsTable.create"/>
                <button id="editBtn"
                        action="doorsTable.edit"/>
                <button id="removeBtn"
                        action="doorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
