<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.ekom.ekomerp.web.inventory.InventoryBrowse"
        messagesPack="com.ekom.ekomerp.web.inventory">
    <dsContext>
        <groupDatasource id="inventoriesDs"
                         class="com.ekom.ekomerp.entity.Inventory"
                         view="inventory-view">
            <query>
                <![CDATA[select e from ekomerp$Inventory e
where e.quantity <> 0
order by e.product.name]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="inventoriesDataGrid"
            spacing="true">
        <filter id="filter"
                applyTo="inventoriesDataGrid"
                datasource="inventoriesDs"
                defaultMode="fts"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <dataGrid id="inventoriesDataGrid"
                  datasource="inventoriesDs"
                  width="100%">
            <actions>
                <action id="excel"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column property="product"/>
                <column property="product.code"/>
                <column property="location"/>
                <column property="quantity"/>
            </columns>
            <buttonsPanel>
                <button action="inventoriesDataGrid.excel"/>
                <button action="inventoriesDataGrid.refresh"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>
