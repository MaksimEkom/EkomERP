<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.ekom.ekomerp.web.pricingtype.PricingTypeBrowse"
        focusComponent="pricingTypesTable"
        lookupComponent="pricingTypesTable"
        messagesPack="com.ekom.ekomerp.web.pricingtype">
    <dsContext>
        <datasource id="pricingTypeDs"
                    class="com.ekom.ekomerp.entity.PricingType"
                    view="_local"/>
        <groupDatasource id="pricingTypesDs"
                         class="com.ekom.ekomerp.entity.PricingType"
                         view="_local">
            <query>
                <![CDATA[select e from ekomerp$PricingType e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="pricingTypesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="pricingTypesTable"
                        datasource="pricingTypesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="pricingTypesTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                        <action id="refresh"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="code"/>
                    </columns>
                    <rows datasource="pricingTypesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="pricingTypesTable.create"/>
                        <button id="editBtn"
                                action="pricingTypesTable.edit"/>
                        <button id="removeBtn"
                                action="pricingTypesTable.remove"/>
                        <button id="excelBtn"
                                action="pricingTypesTable.excel"/>
                        <button id="refreshBtn"
                                action="pricingTypesTable.refresh"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="pricingTypeDs">
                        <column width="250px">
                            <field property="name"/>
                            <field property="code"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
